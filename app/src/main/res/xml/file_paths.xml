<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Для внешних файлов -->
    <external-path
        name="external_files"
        path="." />
    <external-files-path
        name="external_files_path"
        path="." />

    <!-- Для изображений на внешнем хранилище -->
    <external-path
        name="images"
        path="/" />

    <!-- Для кэшированных файлов приложения -->
    <cache-path
        name="cache"
        path="." />

    <!-- Для файлов внутри директории files/ вашего приложения -->
    <files-path
        name="files"
        path="." />

</paths>