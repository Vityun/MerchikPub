<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  РАМОЧКА  -->
    <item
        android:left="0dp"
        android:right="3dp"
        android:top="0dp"
        android:bottom="3dp"
        >
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#B4B4B4" />
        </shape>
    </item>

    <!--  ТЕНЬ  -->
    <item
        android:left="1dp"
        android:right="0dp"
        android:top="1dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#C9C9C9"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!--  ФОН  -->
    <item
        android:left="1dp"
        android:right="3dp"
        android:top="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>

